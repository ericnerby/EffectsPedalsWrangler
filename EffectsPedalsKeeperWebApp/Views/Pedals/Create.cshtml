@model EffectsPedalsKeeperShared.Models.Pedal
@using EffectsPedalsKeeperShared.Models

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pedal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maker" class="control-label"></label>
                <input asp-for="Maker" class="form-control" />
                <span asp-validation-for="Maker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EffectType" class="control-label"></label>
                <select asp-for="EffectType" asp-items="Html.GetEnumSelectList<EffectType>()" class="form-control">
                    <option value="">Select an Effect Type</option>
                </select>
                <span asp-validation-for="EffectType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
