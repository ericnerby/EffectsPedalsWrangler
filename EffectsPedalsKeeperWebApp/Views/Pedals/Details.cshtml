@model EffectsPedalsKeeperShared.Models.ViewModels.PedalDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pedal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pedal.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pedal.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pedal.Maker)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pedal.Maker)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pedal.EffectType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pedal.EffectType)
        </dd>
    </dl>
    @if (Model.PedalSettings.Count > 0)
    {
        <h5>Settings</h5>
        <hr />
        <dl class="row">
            @foreach (var setting in Model.PedalSettings)
            {
                <dt class="col-sm-2">@setting.Label</dt>
                <dd class="col-sm-10">@setting.SettingType</dd>
            }
        </dl>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Pedal.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
